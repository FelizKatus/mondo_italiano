<div class="row">

  <% @products.each do |p| %>
    
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <img class="card-img-top" width="100%" height="225" src="<%= p.path_to_image %>" focusable="false" role="img" aria-label="Thumbnail">
        <div class="progress" style="height: 4px;">
          <div class="progress-bar" role="progressbar" style="<% case p.size when 30 %><%= 'width: 33%;' %>
                                                                <% when 45 %><%= 'width: 66%;' %>
                                                                <% when 50 %><%= 'width: 100%;' %>
                                                              <% end %>" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
          </div>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= p.title %>
          </h5>
          <p class="card-text">
            <%= p.description %>
          </p>
          <p class="card-text">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1" <%= p.is_spicy ? 'checked' : ''%> disabled>
              <label class="form-check-label" for="inlineCheckbox1">Spicy</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2" <%= p.is_veg ? 'checked' : ''%> disabled>
              <label class="form-check-label" for="inlineCheckbox2">Veg</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3" <%= p.is_offer ? 'checked' : ''%> disabled>
              <label class="form-check-label" for="inlineCheckbox3">Offer</label>
            </div>
          </p>
          <p class="card-text">
            <span class="badge badge-primary">$<%= p.price %></span>
          </p>
          <hr>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <a href="/product/<%= p.id %>" class="btn btn-sm btn-outline-secondary">View more</a>
              <button type="button" class="btn btn-sm btn-outline-secondary" onClick="add_to_cart(<%= p.id %>)">Add to Cart</button>
            </div>
            <small class="text-muted">ID: <%= p.id %></small>
          </div>
        </div>
      </div>
    </div>

  <% end %>

  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      <li class="page-item active"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>

</div><!-- /row -->